
@{
    ViewBag.Title = "Principal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 text-center">
        <br>
        <br>
        <h2 id="lblNome"></h2>
        <br>
    </div>
</div>

<form id="formPrincipal" method="post">
    <div class="row text-center">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="row" style="margin-bottom:5px;">
                <div class="col-md-6">
                    <button type="button" id="btnExtrato" class="btn btn-primary btn-lg btn-block"  data-toggle="modal" data-target="#modalExtrato"  style="height:70px;">Extratos</button>
                </div>
                <div class="col-md-6">
                    <button type="button" id="btnSaque" data-toggle="modal" data-target="#modalSaque" class="btn btn-primary btn-lg btn-block" style="height:70px;">Saques</button>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <button type="button" id="btnDeposito" name="btnDeposito" data-toggle="modal" data-target="#modalDeposito" class="btn btn-primary btn-lg btn-block" style="height:70px;">Depósitos</button>
                </div>
                <div class="col-md-6">
                    <button type="button" id="btnTransferencia" name="btnTransferencia" data-toggle="modal" data-target="#modalTransferencia"  class="btn btn-primary btn-lg btn-block" data-toggle="modal" data-target="#modalTransferencia" style="height:70px;">Transferência</button>
                </div>
            </div>

            <div class="row" style="margin-top:10px;">
                <div class="col-lg-12">

                    <button type="button" id="btnSair" class="btn btn-danger btn-lg btn-block">Sair</button>

                </div>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>

</form>


<div class="modal fade" id="modalExtrato" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content" style="padding-top:5px;  margin-left:auto; margin-right:auto; text-align:left;">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title">Extrato</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table-responsive table-hover" border="1" id="tbExtrato" style="width:100%;"></table>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>

<form id="formSaque" method="post">
    <div class="modal fade" id="modalSaque" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content" style="padding-top:5px;  margin-left:auto; margin-right:auto; text-align:left;">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title">Saque</h4>
                </div>
                <div class="modal-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="Valor">Valor:</label>
                                    <input required="required" type="text" class="form-control valor text-right" id="ValorSaque" name="ValorSaque">
                                </div>
                            </div>
                        </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="button" id="btnConfirmaSaque" class="btn btn-primary">Confirmar</button>
                </div>
            </div>
        </div>
    </div>
</form>

<form id="formDeposito" method="post">
    <div class="modal fade" id="modalDeposito" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content" style="padding-top:5px;  margin-left:auto; margin-right:auto; text-align:left;">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title">Depósito</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Nome">Conta Destino*:</label>
                                    <input required="required" type="text" class="form-control maskConta" id="NumContaDep" name="NumContaDep" maxlength="5">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="CPF">Agência Destino*:</label>
                                    <input required="required" type="text" class="form-control" id="NumAgenciaDep" name="NumAgenciaDep" maxlength="4">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="Valor">Valor*:</label>
                                    <input required="required" type="text" class="form-control valor text-right" id="ValorDeposito" name="ValorDeposito">
                                </div>
                            </div>
                        </div>                
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="button" id="btnConfirmaDeposito" class="btn btn-primary">Confirmar</button>
                </div>
            </div>
        </div>
    </div>
</form>

<form id="formTransferencia" method="post">
    <div class="modal fade" id="modalTransferencia" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content" style="padding-top:5px;  margin-left:auto; margin-right:auto; text-align:left;">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title">Transferência</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Nome">Conta Destino*:</label>
                                    <input required="required" type="text" class="form-control maskConta" id="NumContaTrans" name="NumContaTrans" maxlength="5">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="CPF">Agência Destino*:</label>
                                    <input required="required" type="text" class="form-control" id="NumAgenciaTrans" name="NumAgenciaTrans" maxlength="4">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="Valor">Valor*:</label>
                                    <input required="required" type="text" class="form-control valor text-right" id="ValorTrans" name="ValorTrans">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="button" id="btnConfirmaTransferencia" class="btn btn-primary">Confirmar</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section scripts{
    @Scripts.Render("~/bundles/home/principal")
    @Scripts.Render("~/bundles/mask")
    @Scripts.Render("~/bundles/atm")
 
    
}



